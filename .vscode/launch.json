{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/out/src/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Extension Host",
			"protocol": "legacy",
			"port": 5870,
			"sourceMaps": true,
			"restart": true,
			"outFiles": [
				"${workspaceFolder}/out/src"
			]
		}
	]
}